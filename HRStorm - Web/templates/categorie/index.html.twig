{% extends '/employee/index.html.twig' %}

{% block title %}Catégorie index{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="">Table des catégories</h1>
                <div class="text-right">
                    <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">Ajouter</a>
                </div>
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_depense_index') }}">Table du dépense</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
              <!--  <th>Id</th>-->
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
               <!-- <td>{{ categorie.id }}</td>-->
                <td>{{ categorie.nom }}</td>
                <td>
                   <!-- <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>-->
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>

                    <a href="{{ path('app_categorie_delete', {'id': categorie.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
