{% extends "/joboffers.html.twig" %}
{% block content %}
{% block body %}
    <div class="container">

    {{ include('candidat/_form.html.twig') }}

    <style>
        .container {
            max-width;
            margin: 0 auto;
            padding: 20px;
        }

        .text-center {
            text-align: center;
        }

        .display-4 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0;
        }

        .candidat-form {
            margin-top: 50px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0069d9;
        }

        .text-primary {
            color: #007bff;
        }
    </style>
{% endblock %}
{% endblock %}